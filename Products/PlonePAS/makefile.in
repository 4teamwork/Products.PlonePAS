NAME=PlonePAS
DOMAIN=plonepas
MAJOR_VERSION=0.0
MINOR_VERSION=0
RELEASE_TAG=-cvs
PACKAGE_NAME=${NAME}-${MAJOR_VERSION}.${MINOR_VERSION}${RELEASE_TAG}

PYTHON="/usr/bin/python"
TMPDIR=~/tmp

CURDIR=$(shell pwd)
BASE_DIR=$(shell dirname ${CURDIR})

20_SOFTWARE_HOME=~/src/zope/2_7/lib/python
20_INSTANCE_HOME=~/src/instance/pd11
20_ZOPE_CONFIG=${20_INSTANCE_HOME}/etc/zope.conf.test

21_SOFTWARE_HOME=~/src/zope/trunk/lib/python
21_INSTANCE_HOME=~/src/instance/plone21
21_ZOPE_CONFIG=${21_INSTANCE_HOME}/etc/zope.conf.test

PACKAGES=${NAME} PluginRegistry LDAPMultiPlugins LDAPUserFolder PluggableAuthService

RM=rm -f
RMRF=rm -rf
FIND=find
XARGS=xargs
CD=cd
LN=ln -sfn
CP=cp
TAR=tar
ZIP=zip
MKDIR=mkdir -p

.PHONY : clean test reindent reindent_clean sdist
.PHONY : default

# default:     The default step (invoked when make is called without a target)
default: quickclean test

clean :
	find . \( -name '*~' -o -name '*.py[co]' -o -name '*.bak' -o -name '\.#*' \) -exec rm {} \; -print

quickclean :
	find . \( -name '*~' -o -name '*.bak' -o -name '\.#*' \) -exec rm {} \; -print

reindent :
	~/src/reindent.py -r -v .

test20 :
	export INSTANCE_HOME=${20_INSTANCE_HOME}; \
	export SOFTWARE_HOME=${20_SOFTWARE_HOME}; \
	export ZOPE_CONFIG=${20_ZOPE_CONFIG}; \
	cd ${CURDIR}/tests && ${PYTHON} -O runalltests.py

test21 :
	export INSTANCE_HOME=${21_INSTANCE_HOME}; \
	export SOFTWARE_HOME=${21_SOFTWARE_HOME}; \
	export ZOPE_CONFIG=${21_ZOPE_CONFIG}; \
	cd ${CURDIR}/tests && ${PYTHON} -O runalltests.py

test : test20 test21

# sdist:       Create a source distribution file (implies clean).
#
sdist: reindent clean sdist_tgz

# sdist_tgz:   Create a tgz archive file as a source distribution.
#
sdist_tgz:
	echo -n "${MAJOR_VERSION}.${MINOR_VERSION}${RELEASE_TAG}" >\
          ${CURDIR}/version.txt
	${MKDIR} ${TMPDIR}/${PACKAGE_NAME}
	${CD} ${TMPDIR}/${PACKAGE_NAME} && \
          for package in ${PACKAGES}; do ${LN} ${BASE_DIR}/$$package .; done && \
          ${CD} ${TMPDIR} && ${TAR} \
           --exclude=${PACKAGE_NAME}.tgz \
           --exclude=CVS \
           --exclude=.svn \
           --exclude=.cvsignore \
           --exclude=makefile \
           --exclude=Makefile \
           --exclude=*.pyc \
           --exclude=*.pyo \
           --exclude=TAGS \
           --exclude=*~ \
           --exclude=.#* \
	-zhcf ${BASE_DIR}/${PACKAGE_NAME}.tgz ${PACKAGE_NAME}
	${RMRF} ${TMPDIR}/${PACKAGE_NAME}

dev_tgz:
	${MKDIR} ${TMPDIR}/${PACKAGE_NAME}
	${CD} ${TMPDIR}/${PACKAGE_NAME} && \
          for package in ${PACKAGES}; do ${LN} ${BASE_DIR}/$$package .; done && \
          ${CD} ${TMPDIR} && ${TAR} \
           --exclude=${PACKAGE_NAME}.tgz \
           --exclude=*.pyc \
           --exclude=*.pyo \
           --exclude=TAGS \
           --exclude=*~ \
           --exclude=.#* \
	-zhcf ${BASE_DIR}/${PACKAGE_NAME}.tgz ${PACKAGE_NAME}
	${RMRF} ${TMPDIR}/${PACKAGE_NAME}
